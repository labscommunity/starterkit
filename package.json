{
  "private": true,
  "scripts": {
    "build:cli": "turbo build --filter=create-perma-app",
    "build:web": "turbo build --filter=web",
    "build": "turbo build",
    "start:cli": "turbo start --filter=create-perma-app",
    "start:web": "turbo start --filter=web",
    "dev:cli": "turbo dev --filter=create-perma-app",
    "dev:web": "turbo dev --filter=web",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "format": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path .gitignore --write",
    "format:check": "prettier '**/*.{cjs,mjs,ts,tsx,md,json}' --ignore-path .gitignore --check",
    "release": "changeset version",
    "publish": "turbo publish --filter=create-perma-app"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.10",
  "name": "my-turborepo"
}
